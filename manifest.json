{
  "manifest_version": 3,
  "name": "Ad-Free YouTube Music Player",
  "version": "1.0",
  "description": "YouTube Music Player with Advanced Ad-Blocking",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["adblock.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Music Player Settings"
  }
}
